            android:paddingTop="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 8480609984"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:textColor="#F9FAFB"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="8dp"
            android:src="@drawable/mail"
            app:tint="#B388FF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#F5F6F8"
            android:paddingLeft="20dp"
            android:paddingBottom="6dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="srutismaranika2123@gmail.com"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingBottom="6dp"
            android:paddingLeft="24dp"
            android:paddingRight="4dp"
            android:paddingTop="6dp"
            android:textColor="#F8F9FA"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="8dp"
            android:src="@drawable/adress"
            app:tint="#B388FF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#F6F7F8"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bhubaneshwar, Odisha"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingLeft="24dp"
            android:paddingTop="6dp"
            android:textColor="#F5F6F8"
            android:paddingBottom="6dp"
            />

    </LinearLayout>

    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="20dp"
     android:orientation="horizontal">


    <ImageView
        android:layout_width="30dp"
        android:id="@+id/linkedin"
        android:clickable="true"
        android:onClick="openLinkedin"
        android:layout_height="30dp"
        android:layout_marginLeft="61dp"
        android:src="@drawable/linkedin111" />

    <ImageView
        android:layout_width="30dp"
        android:id="@+id/github"
        android:clickable="true"
        android:onClick="openGithub"
        android:layout_height="30dp"
        android:layout_marginLeft="71dp"
        android:src="@drawable/github111" />

    <ImageView
        android:layout_width="30dp"
        android:id="@+id/instagram"
        android:clickable="true"
        android:onClick="openInstagram"
        android:layout_height="30dp"
        android:layout_marginLeft="81dp"
        android:src="@drawable/insta1" />

    </LinearLayout>
</LinearLayout>
